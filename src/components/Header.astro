---
import Section from "@/components/ui/Section.astro";
import SectionCell from "@/components/ui/Section.Cell.astro";
import Button from "@/components/ui/Button.astro";
import Typography from "./ui/Typography.astro";
---

<Section id="header">
  <SectionCell id="header-cell" blurBackground>
    <a href="/">
      <Typography variant="h5" id="logo">
        <span></span><span></span><span></span>
      </Typography>
    </a>
    <span style={{ flex: "1 1" }}></span>
    <a href="/gallery">
      <Button>Gallery</Button>
    </a>
  </SectionCell>
</Section>

<style>
  :global(#header) {
    height: var(--size-header-height);
    position: sticky;
    top: 0;
    z-index: 1000;
  }
  :global(#header-cell) {
    padding: 0 var(--spacing-component);
    
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  #logo {
    cursor: pointer;
    user-select: none;
    text-wrap: wrap;
    white-space: pre;

    font-weight: 900;

    & span:after {
      opacity: 0;
      width: 0;
      display: inline-block;
      box-sizing: border-box;

      transition: all var(--transition-short);
    }
    &:hover {
      & span:nth-child(1):after,
      & span:nth-child(3):after {
        opacity: 1;
        width: 3.5rem;
      }
      & span:nth-child(2) {
        &:after {
          opacity: 1;
          width: 2rem;
        }
        &:before {
          opacity: 0;
          width: 0;
        }
      }
    }

    & span:nth-child(1) {
      &:before {
        content: "Z";
      }
      &:after {
        content: "ane";
      }
    }
    & span:nth-child(2) {
      &:before {
        content: ".";
      }
      &:after {
        content: "&";
        padding: 0.5rem 0;
      }
    }
    & span:nth-child(3) {
      &:before {
        content: "K";
      }
      &:after {
        content: "iyo";
      }
    }
  }
</style>
